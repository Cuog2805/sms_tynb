@model SMS_TYNB.ViewModel.BaseFormViewModel<SMS_TYNB.Models.Master.WpNhom>
@{
	ViewBag.Title = "Quản lý nhóm";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
	<div class="row">
		<div class="card shadow-sm mb-4 p-0">
			<div class="card-header bg-primary text-white">
				<h5 class="card-title mb-0">
					Quản lý nhóm
				</h5>
			</div>
			<div class="card-body">
				<div class="row align-items-center">
					<div class="col-md-8 mb-3 mb-md-0">
						<div class="btn-group me-2" role="group">
							<button type="button" id="btnAdd" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#data-form" onclick="beforeAdd()">
								<i class="bi bi-plus-circle me-1"></i>
								Thêm nhóm
							</button>
						</div>
						<div class="btn-group" role="group">
							<a class="btn btn-outline-primary" type="button" asp-area="" asp-controller="Contact" asp-action="Index"><i class="bi bi-person-lines-fill"></i> Thêm liên hệ</a>
						</div>
					</div>
					<div class="col-md-4">
						<div class="input-group">
							<span class="input-group-text">
								<i class="bi bi-search"></i>
							</span>
							<input type="text" class="form-control" id="searchInput" placeholder="Tìm kiếm theo tên nhóm...">
						</div>
					</div>
				</div>
			</div>
		</div>
		@* danh sách *@
		<table class="table table-bordered" id="groupTable">
			<thead class="table-primary text-white">
				<tr class="bg-primary">
					<th class="text-center">STT</th>
					<th>Tên nhóm</th>
					<th>Nhóm cha</th>
					<th>Trạng thái</th>
					<th class="text-center">Thao tác</th>
				</tr>
			</thead>
			<tbody id="groupTableBody">
			</tbody>
		</table>
	</div>
	@{
		await Html.RenderPartialAsync("_Pagination");
	}
</div>

<!-- Modal -->
<div class="modal fade" id="data-form" tabindex="-1" aria-labelledby="dataFormLabel" aria-hidden="true">
	@{
		await Html.RenderPartialAsync("_Form", Model);
	}
</div>

@section Scripts {
	<script src="~/js/group/group.js"></script>
}