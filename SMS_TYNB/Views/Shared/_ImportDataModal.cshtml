<div class="modal fade" id="inputFileTemplateModal" tabindex="-1" aria-labelledby="inputFileTemplateModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="inputFileTemplateModalLabel">
                    Tải lên file dữ liệu
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="inputFileTemplateModalForm" method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="FileImport" class="form-label">File dữ liệu</label>
                        <input class="form-control" type="file" name="FileImport" id="FileImport" />
                    </div>
                </form>
                <div class="btn-group me-2" role="group">
                    <button type="button" id="previewFileTemplateBtn" class="btn btn-outline-primary">
                        <i class="bi bi-eye me-1"></i>
                        Xem dữ liệu
                    </button>
                    <button type="button" id="btnDownloadTemplate" class="btn btn-outline-success">
                        <i class="bi bi-download me-1"></i>
                        Tải mẫu
                    </button>
                </div>
                @* danh sách *@
                <table class="table table-bordered mt-4" id="previewDataImportTable">
                </table>
                @{
                    await Html.RenderPartialAsync("_PaginationMinimal", "previewDataImportPagination");
                }
            </div>

            <div class="modal-footer">
                <button type="button" id="importFileTemplateBtn" class="btn btn-primary">
                    Import
                </button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    Hủy
                </button>
            </div>
        </div>
    </div>
</div>