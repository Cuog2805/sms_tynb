<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SMS_TYNB</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SMS_TYNB.styles.css" asp-append-version="true" />
	<link href="~/lib/alertifyjs/css/alertify.css" rel="stylesheet" />
	<link href="~/lib/alertifyjs/css/alertify.min.css" rel="stylesheet" />
	<link href="~/lib/alertifyjs/css/alertify.rtl.css" rel="stylesheet" />
	<link href="~/lib/alertifyjs/css/alertify.rtl.min.css" rel="stylesheet" />
	<link href="~/lib/jstree/themes/default/style.min.css" rel="stylesheet" />
    <style>
        .navbar-nav .nav-link.active {
            border-bottom: 1px solid #007bff;
            font-weight: 500;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom mb-3">
            <div class="container-fluid justify-content-center">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Hệ thống tin nhắn</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </nav>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom mb-3">
            <div class="container-fluid">
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Message" ? "active" : "")"
                               asp-area="" asp-controller="Message" asp-action="Index">Gửi tin nhắn</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Contact" ? "active" : "")"
                               asp-area="" asp-controller="Contact" asp-action="Index">Quản lý danh bạ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Group" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")"
                               asp-area="" asp-controller="Group" asp-action="Index">Quản lý nhóm</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Group" && ViewContext.RouteData.Values["Action"]?.ToString() == "Assign" ? "active" : "")"
                               asp-area="" asp-controller="Group" asp-action="Assign">Phân nhóm</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - SMS_TYNB - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
	<script src="~/lib/jstree/jstree.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
	<script src="~/lib/alertifyjs/alertify.js"></script>
	<script src="~/lib/alertifyjs/alertify.min.js"></script>
	<script src="~/js/common.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
