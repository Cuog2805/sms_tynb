@model string
<!-- Thông tin và phân trang -->
<div class="mt-2">
    <!-- Phân trang hiện đại -->
    <div class="row">
        <div class="col-md-8">
            <div class="row">
                <div class="col-md-4">
                    <select class="form-select form-select-md " id="pageSize-@Model">
                        <option value="10">10</option>
                        <option value="25">25</option>
                        <option value="50">50</option>
                        <option value="100">100</option>
                    </select>
                </div>
                <div id="pagination-info-@Model" class="text-muted mt-2 col-md-8">
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-end" id="@Model">
                </ul>
            </nav>
        </div>
    </div>
</div>