@{
	ViewData["Title"] = "Trang chủ";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="home-container">
    <div class="row g-4">
        <div class="col-md-4">
            <a class="nav-card d-flex flex-column align-items-center justify-content-center" asp-area="" asp-controller="Message" asp-action="SendMessage">
                <i class="bi bi-envelope"></i>
                <span class="nav-card-text">Gửi tin nhắn</span>
            </a>
        </div>
        <div class="col-md-4">
            <a class="nav-card d-flex flex-column align-items-center justify-content-center" asp-area="" asp-controller="Contact" asp-action="Index">
                <i class="bi bi-person-lines-fill"></i>
                <span class="nav-card-text">Quản lý danh bạ</span>
            </a>
        </div>
        <div class="col-md-4">
            <a class="nav-card d-flex flex-column align-items-center justify-content-center" asp-area="" asp-controller="Group" asp-action="Index">
                <i class="bi bi-people"></i>
                <span class="nav-card-text">Quản lý nhóm</span>
            </a>
        </div>
    </div>

    <div class="row g-4 mt-2">
        <div class="col-md-4">
            <a class="nav-card d-flex flex-column align-items-center justify-content-center" asp-area="" asp-controller="Group" asp-action="Assign">
                <i class="bi bi-diagram-3"></i>
                <span class="nav-card-text">Phân nhóm</span>
            </a>
        </div>
        <div class="col-md-4">
            <a class="nav-card d-flex flex-column align-items-center justify-content-center" asp-area="Identity" asp-page="/Account/Manage/ChangePassword">
                <i class="bi bi-lock"></i>
                <span class="nav-card-text">Đổi mật khẩu</span>
            </a>
        </div>
        <div class="col-md-4">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-card d-flex flex-column align-items-center justify-content-center">
                    <i class="bi bi-box-arrow-right"></i>
                    <span class="nav-card-text">Đăng xuất</span>
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts{
	<link href="~/css/home.css" rel="stylesheet" />
}

